{
  "name": "@mcp-monorepo/npm",
  "version": "1.1.1",
  "type": "module",
  "description": "MCP server for npm command tools (run scripts, install packages, list scripts)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@mcp-monorepo/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
