{
  "name": "@mcp-monorepo/notion-query",
  "version": "1.3.1",
  "type": "module",
  "description": "MCP server for querying Notion data sources.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "demo": "node dist/local-rag/DEMO.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "generate-readme": "node ../../scripts/generate-readme.ts"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@lancedb/lancedb": "0.22.2",
    "@langchain/core": "^1.1.8",
    "@langchain/textsplitters": "^1.0.1",
    "@mcp-monorepo/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@mozilla/readability": "^0.6.0",
    "@notionhq/client": "^5.6.0",
    "@tryfabric/martian": "^1.2.4",
    "apache-arrow": "^21.1.0",
    "chokidar": "^5.0.0",
    "jsdom": "^27.3.0",
    "mammoth": "^1.11.0",
    "notion-to-md": "^3.1.9",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/jsdom": "^27",
    "@types/node": "^22.14.1",
    "@types/papaparse": "^5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "license": "AGPL-3.0-only"
}
