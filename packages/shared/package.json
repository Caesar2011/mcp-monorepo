{
  "name": "@mcp-monorepo/shared",
  "version": "1.2.0",
  "type": "module",
  "description": "Shared tools for other mcp servers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "syslog-server": "tsc-watch -p \".\" --onSuccess \"node ./dist/syslog/server.js\"",
    "syslog-client": "tsc-watch --onSuccess \"node ./dist/syslog/client.js\"",
    "generate-readme": "node ../../scripts/generate-readme.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "glossy": "^0.1.7",
    "winston": "^3.17.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/glossy": "^0.1.3",
    "@types/node": "^22.14.1",
    "rimraf": "^6.0.1",
    "tsc-watch": "^7.1.1",
    "types-package-json": "^2.0.39",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "license": "AGPL-3.0-only"
}
